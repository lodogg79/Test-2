  <script>
    function laatAIMeedenken() {
      const input = document.getElementById("inputTekst").value.trim();
      const antwoordVeld = document.getElementById("aiAntwoord");

      if (input === "") {
        antwoordVeld.innerHTML = "ðŸ’­ Schrijf eerst iets, al is het maar Ã©Ã©n zin.";
        return;
      }

      antwoordVeld.innerHTML = "<span class='thinking'>ðŸ¤” AI denkt even na...</span>";

      setTimeout(() => {
        const reacties = [
          "Wat je schrijft klinkt alsof je al een tijdje veel draagt. Misschien hoef je het niet meteen op te lossen, alleen even te erkennen.",
          "Dit voelt als iemand die vooruit wil, maar ook moe is. Dat mag naast elkaar bestaan.",
          "Er zit eerlijkheid in je woorden. Soms ontstaat rust niet door antwoorden, maar door ruimte.",
          "Als je dit zo leest: wat zou je tegen jezelf zeggen als je mild zou zijn?",
          "Misschien is dit een moment om even stil te staan in plaats van verder te duwen."
        ];

        const reactie = reacties[Math.floor(Math.random() * reacties.length)];

        antwoordVeld.innerHTML = "ðŸ’¬ " + reactie;
      }, 1200);
    }
  </script>

